<div id="projects">
	<% @guides.each do |guide| %>
		<div class="project">
			<p class="date"><%= guide.created_at.strftime('%A, %B %d') %> </p>
			<div class="project_image">
				<% if guide.image.present? %>
					<%= link_to (image_tag guide.image.url(:thumb)), guide %>
				<% end %>
			</div>
			<div class="project_content">
				<h2><a href="#"><%= link_to guide.title, guide %></a> &nbsp; &nbsp;<i class="fa fa-eye" aria-hidden="true"></i> <%= guide.impressionist_count(:filter=>:ip_address)%></h2>
			</div>
		</div>
	<% end %>
</div>

<%= will_paginate @guides %>
