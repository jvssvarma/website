<%= form_for @guide, html: { multipart: true } do |f| %>
  <% if @guide.errors.any? %>
     <h2><%= pluralize(@guide.errors.count, "error") %> prevented this guide from saving:</h2>
     <ul>
     	<% @guide.errors.full_messages.each do |m| %>
     	   <li><%= m %></li>
     	<% end %>
     </ul>
  <% end %>

  <%= f.label :title %><br>
  <%= f.text_field :title %>

  <br>
  <br>

  <%= f.label :content, "Write your guide here" %><br>
  <%= f.text_area :content %>

  <br>
  <br>

  <%= f.label :image %><br>
	<%= f.file_field :image %>

	<br>
	<br>

  <%= f.submit %>

<% end %>
