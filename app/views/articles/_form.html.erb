<%= form_for @article, html: { multipart: true } do |f| %>
  <% if @article.errors.any? %>
     <h2><%= pluralize(@article.errors.count, "error") %> prevented this article from saving:</h2>
     <ul>
     	<% @article.errors.full_messages.each do |m| %>
     	   <li><%= m %></li>
     	<% end %>
     </ul>
  <% end %>

  <%= f.label :title %><br>
  <%= f.text_field :title %>


  <br>
  <br>

  <div class="editable">
    <%= f.label :content, "Write your article here" %><br>
    <%= f.text_area :content %>
  </div>

  <br>
  <br>

  <%= f.label :image %><br>
	<%= f.file_field :image %>

	<br>
	<br>

  <%= f.label :cover %><br>
	<%= f.file_field :cover %>

  <br>
  <br>

  <%= f.submit %>

<% end %>
