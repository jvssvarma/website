<header>
	<title><%= @article.title %> | CodeVarma</title>
</header>

<div id="post_show_content" class="skinny_wrapper wrapper_padding">
	<header>
		<p class="date"><%= @article.created_at.strftime('%A, %B %d') %></p>
		<h1><%= @article.title %></h1>
		<hr>
	</header>

	<div id="content">
		<p><%= markdown @article.content %></p>
	</div>
	<div>
		<% if @article.image.present? %>
			<%= image_tag @article.image.url(:medium) %>
		<% end %>
	</div>
	<% if user_signed_in? %>
	<div id="admin_links">
		<%= link_to "Edit Article", edit_article_path(@article) %>
	    <%= link_to "Delete Article", article_path(@article), method: :delete, data: { confirm: "Are you sure?" } %>
	</div>
	<% end %>

	<hr>

	<div id="share_box">
		<p>Share</p>
		<!-- Twitter -->
    <a onclick="javascript:window.open('http://twitter.com/share?text=<%= @article.title %> by @jvssvarma - &amp;url=<%= url_for([@article, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-twitter"></i></a>
    <!-- Facebook -->
    <a onclick="javascript:window.open('http://www.facebook.com/sharer.php?u=<%= url_for([@article, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-facebook"></i></a>
    <!-- Google Plus -->
    <a onclick="javascript:window.open('https://plus.google.com/share?url=<%= url_for([@article, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-google-plus"></i></a>
		<hr>
		<p class="post" style="margin-top: 10px;"><a href="/contacts/new" class="show_button show_button_wrapper">direct message</a></p>
	</div>

	<hr>

	<%= render 'disqus' %>

	<script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
	<!-- Top ads -->
	<ins class="adsbygoogle"
	     style="display:inline-block;width:728px;height:90px"
	     data-ad-client="ca-pub-4855471288588675"
	     data-ad-slot="7780909111"></ins>
	<script>
	(adsbygoogle = window.adsbygoogle || []).push({});
	</script>
	<hr>

</div>
